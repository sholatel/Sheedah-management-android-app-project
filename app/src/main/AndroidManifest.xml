<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sheedah">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sheedah_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/sheedah_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sheedah">
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".ProfileActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".ForgetPasswordEmail"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditCustomer"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TransactionHistoryAct"
            android:exported="false"
            android:screenOrientation="portrait" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.sheedah.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name=".CustomerDetailAct"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NewInvoicePage"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegistrationPage"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HomePageActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Home_page_theme" />
        <activity
            android:name=".LoginPage"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>