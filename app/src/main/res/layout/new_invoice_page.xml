<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:elevation="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/cardBack"
                android:id="@+id/newInvoiceTopBayLay"
                android:padding="10dp">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/backBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:navigationIcon="@drawable/back_arrow" />


                <TextView
                    android:id="@+id/page_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="sans-serif"
                    android:text="New Invoice"
                    android:textColor="?attr/titleColor"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/addBtn"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_round_backround"
                    android:enabled="false"
                    android:text="Add"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"></Button>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/newInvoiceScroll"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/customerChoiceLay"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Choose Customer"
                    android:textSize="15sp"></TextView>

                <Spinner
                    android:id="@+id/customer"
                    android:layout_width="match_parent"
                    android:popupBackground="?attr/cardBack"
                    android:layout_height="50dp"></Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Select product type"
                    android:textSize="15sp"></TextView>

                <Spinner
                    android:id="@+id/product_category"
                    android:layout_width="match_parent"
                    android:popupBackground="?attr/cardBack"
                    android:layout_height="50dp"></Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Amount"
                    android:textSize="15sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/amount_field_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/cardBack"
                    app:boxStrokeErrorColor="@color/red">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/amount_field"
                        android:layout_width="match_parent"
                        android:background="?attr/recyclerListSep"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:text="0.00" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="quantity"
                    android:textSize="15sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/quantity_field_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/cardBack"
                    app:boxStrokeErrorColor="@color/red">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/quantity_field"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/recyclerListSep"
                        android:inputType="number"
                        android:text="1" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Amount paid"
                    android:textSize="15sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/amount_paid_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeErrorColor="@color/red">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/amount_paid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:background="?attr/recyclerListSep"
                        android:text="0.00" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/newItemBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="10dp"
                android:backgroundTint="?attr/cardBack"
                android:src="@drawable/ic_baseline_add_24"
                app:layout_constraintBottom_toTopOf="@+id/card"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>
    </ScrollView>


        <ProgressBar
            android:id="@+id/invoiceGenerationPb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"></ProgressBar>



</LinearLayout>